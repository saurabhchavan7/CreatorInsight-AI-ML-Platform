{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analysis",
  "version": "1.0",
  "description": "Analyzes YouTube video comments for sentiment.",
  
  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "activeTab", "scripting"],

  "host_permissions": [
    "http://localhost:5000/*",
    "https://www.googleapis.com/*"
  ]
}
